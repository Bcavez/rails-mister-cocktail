  <div class="card-columns">
    <div class="card">
      <%= cl_image_tag @cocktail.photo, width: 400, height: 300, crop: :fill, alt: "#{@cocktail[:name]}", class: "card-img" %>
      <div class="card-img-overlay">
        <h5 class="card-title text-center">
          <%= @cocktail[:name] %>
        </h5>
        <p class="card-text">
          <ul>
            <% @doses.each_with_index do |d, i| %>
              <li>
                <%= d[:description] %> of <%= @ingredients[i][:name] %> <%= link_to 'Delete', dose_path(d), method: :delete, class: 'btn btn-danger btn-sm' %>
              </li>
            <% end %>
          </ul>
        </p>
      </div>
      <div class="card-footer text-center">
          <%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), class: "btn btn-success btn-sm btn-block" %>
      </div>
    </div>
  </div>
